{
  "manifest_version": 2,
  "name": "Unscroll Instagram",
  "description": "Remove scrolling on the homepage of Instagram",
  "version": "2.0",
  "icons": {
    "48": "icons/scroll.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": [
        "unscroll.js"
      ],
      "matches": [
        "https://www.instagram.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "asyncrom@pm.me"
    }
  }
}
